#!/bin/bash

pv "$1" | tee \
	>({ md5sum    - | cut -d- -f1 | tr -d '\n'; echo "$1"; } > "$1.md5") \
	>({ sha1sum   - | cut -d- -f1 | tr -d '\n'; echo "$1"; } > "$1.sha1") \
	>({ sha256sum - | cut -d- -f1 | tr -d '\n'; echo "$1"; } > "$1.sha256") \
	>({ sha512sum - | cut -d- -f1 | tr -d '\n'; echo "$1"; } > "$1.sha512") \
	> /dev/null

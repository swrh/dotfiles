case "${1-}" in
	-h)
		echo "usage: ${0##*/} [-h] [FILES]"
		exit 0
		;;
	-*)
		echo "${0##*/}: invalid argument" 1>&2
		echo "usage: ${0##*/} [-h] [FILES]" 1>&2
		exit 1
		;;
	*)
		;;
esac

cat "$@" | (
	cnt=0
	while read line; do
		lines[${cnt}]="${line}"
		cnt=`expr ${cnt} + 1`
	done

	while [ ${cnt} -gt 0 ]; do
		n=`expr ${RANDOM} % ${cnt}` || :
		printf '%s\n' "${lines[${n}]}"
		cnt=`expr ${cnt} - 1` || :
		lines[${n}]="${lines[${cnt}]}"
	done
)

# .gitconfig

[color]
	ui = auto

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green bold
	changed = red bold
	untracked = red bold

[core]
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore-global

[include]
	path = .gitconfig-local

[diff]
	tool = vimdiff

[merge]
	tool = vimdiff

[push]
	default = simple

[alias]
	lg = log --decorate --graph --oneline

# vim:set ft=gitconfig:
